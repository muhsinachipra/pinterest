{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "collectCoverageFrom": [
    "<rootDir>/../src/**/*.ts",
    "!<rootDir>/../src/main.ts",
    "!<rootDir>/../src/app.module.ts"
  ]
}
